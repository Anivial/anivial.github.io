{
    "compileOnSave": false,
    "compilerOptions": {
        "types": [
            "node"
        ],
        "outDir": "./build",
        "baseUrl": ".",
        "rootDirs": [
            "./src/"
        ],
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "allowJs": false,
        "declaration": false,
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "downlevelIteration": true,
        "lib": [
            "es2019",
            "es2015",
            "es2016",
            "dom"
        ],
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "keyofStringsOnly": true,
        "strictNullChecks": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "paths": {
            "src/*": [
                "./src/*"
            ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "src/custom.d.ts"
    ]
}
